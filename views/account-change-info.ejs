    <div class="tt-breadcrumb">
      <div class="container">
        <ul>
          <li><a href="index.html">Trang chủ</a></li>
          <li>Tài khoản</li>
        </ul>
      </div>
    </div>
    <div id="tt-pageContent">
      <div class="container-indent">
        <div class="container container-fluid-custom-mobile-padding">
          <h1 class="tt-title-subpages noborder">TÀI KHOẢN</h1>
          <div class="tt-shopping-layout">
            <h2 class="tt-title">ĐỊA CHỈ HIỆN TẠI</h2>
            <div class="tt-wrapper">
              <a href="#" class="btn">THÊM ĐỊA CHỈ MƠÍ</a><br />
              <a href="account.html" class="tt-link-back"> <i class="icon-h-46"></i> Quay về trang thông tin cá nhân </a>
            </div>
            <div class="tt-wrapper">
              <h6 class="tt-title">Chỉnh sửa thông tin các nhân</h6>
              <div class="form-default">
                <form>
                  <div class="form-group">
                    <label for="shopInputFirstName" class="control-label">Họ *</label>
                    <input type="text" class="form-control" id="shopInputFirstName" />
                  </div>
                  <div class="form-group">
                    <label for="shopInputLastName" class="control-label">Tên *</label>
                    <input type="text" class="form-control" id="shopInputLastName" />
                  </div>
                  <div class="form-group">
                    <label for="shopCompanyName" class="control-label">Tên công ty</label>
                    <input type="text" class="form-control" id="shopCompanyName" />
                  </div>
                  <div class="form-group">
                    <label for="shopCompanyName" class="control-label">Quốc gia *</label>
                    <select class="form-control">
                      <option>Việt Nam</option>
                      <option>Đông Lào</option>
                      <option>Country 03</option>
                      <option>Country 04</option>
                      <option>Country 05</option>
                      <option>Country 06</option>
                      <option>Country 07</option>
                      <option>Country 08</option>
                      <option>Country 09</option>
                      <option>Country 10</option>
                      <option>Country 11</option>
                    </select>
                  </div>
                  <div class="form-group">
                    <label for="shopAddress" class="control-label">Địa chỉ *</label>
                    <input type="text" class="form-control" id="shopAddress" />
                  </div>
                  <div class="form-group">
                    <label for="shopTown" class="control-label">Tỉnh / Thành Phố *</label>
                    <input type="text" class="form-control" id="shopTown" />
                  </div>
                  <div class="form-group">
                    <label for="shopState" class="control-label">Quốc gia*</label>
                    <input type="text" class="form-control" id="shopState" />
                  </div>
                  <div class="form-group">
                    <label for="shopPostCode" class="control-label">Mã bưu diện / ZIP *</label>
                    <input type="text" class="form-control" id="shopPostCode" />
                  </div>
                  <div class="form-group">
                    <label for="shopPhone" class="control-label">Số Điện Thoại*</label>
                    <input type="text" class="form-control" id="shopPhone" />
                  </div>
                  <div class="form-group">
                    <label for="shopEmail" class="control-label">Địa chỉ email *</label>
                    <input type="text" class="form-control" id="shopEmail" />
                  </div>
                  <!-- <div class="checkbox-group">
                    <input type="checkbox" id="checkBox11" name="checkbox" />
                    <label for="checkBox11">
                      <span class="check"></span>
                      <span class="box"></span>
                      Set as deafult address?
                    </label>
                  </div> -->
                  <div class="row tt-offset-21">
                    <div class="col-auto">
                      <button type="submit" class="btn">Lưu</button>
                    </div>
                    <div class="col-auto align-self-center">or <a href="#" class="tt-link">Huỷ</a></div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <footer>
      <% include partials/footer %>
    </footer>
    <a href="#" class="tt-back-to-top">BACK TO TOP</a>
